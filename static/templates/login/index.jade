| {{define "CONTENT"}}
    header
        form#authForm
            .row
                div.col.col-sm-4.offset-sm-4
                    div.form-group
                        label(for="person_email")
                            | {{ T "login.loginlabel" "" }}
                        | {{ $a := "login.loginplaceholder" }} {{ $b := "" }}
                        input.form-control#person_email(type="email" 
                                                        aria-describedby="emailHelp" 
                                                        placeholder="{{ T $a $b }}"
                                                        name="person_email")
                        small#emailHelp.form-text.text-muted
                            | {{ T "login.logincomment" "" }}
                    div.form-group
                        label(for="person_password")
                            | {{ T "login.passwordlabel" "" }}
                        | {{ $a := "login.passwordplaceholder" }} {{ $b := "" }}
                        input.form-control#person_password(type="password" 
                                                        aria-describedby="passwordHelp" 
                                                        placeholder="{{ T $a $b }}" 
                                                        name="person_password")
            .row
                .col.offset-sm-4.col-sm-2
                    button#gettoken.btn.btn-primary(type="button" onclick="getToken();")
                        | {{ T "global.submit" "" }}
                .col.col-sm-2
                    p.text-right
                        | {{ $a := "login.resetpasswordtitle" }} {{ $b := "" }}
                        a#getcaptcha(href="#" onclick="getCaptcha();" title="{{ T $a $b }}")
                            span.mdi.mdi-36px.mdi-lock-reset 
        
        form#captcha
            .row.invisible#captcha-row
                div.col.col-sm-12.d-flex.justify-content-center.mt-sm-4.mb-sm-2
                    img#captcha-img
                div.col.col-sm-12.d-flex.justify-content-center.mb-sm-4
                    input#captcha_uid(type="hidden" name="captcha_uid")
                    input#captcha_text(type="text" name="captcha_text")
                    | {{ $a := "login.captcharesetpasswordtitle" }} {{ $b := "" }}
                    a#resetpassword(href="#" onclick="resetPassword();" title="{{ T $a $b }}")
                        span.mdi.mdi-36px.mdi-lock-reset 

    a(href="https://github.com/tbellembois/gochimitheque")
        img(style="position: absolute; top: 0; right: 0; border: 0;" src="{{.ProxyPath}}img/forkme_right_darkblue_121621.png" alt="Fork me on GitHub")

    .fixed-bottom.row
        .col.col-sm-4
            img.mx-auto.d-block(src="{{.ProxyPath}}img/logo_ens.png", alt="ens_logo" title="Ecole Normale Supérieure de Lyon")
        .col.col-sm-4
            img.mx-auto.d-block(src="{{.ProxyPath}}img/logo_uca.jpg", alt="uca_logo" title="Université Clermont Auvergne")
        .col.col-sm-4
            p.blockquote-footer
                i Chimithèque logo designed by 
                a(title="mon-aloevera [at] hotmail [dot] com")
                    b Katia Varet.
            p.blockquote-footer
                i Do not use or copy without her permission.

| {{end}}
