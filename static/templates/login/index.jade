| {{define "CONTENT"}}
    header
        form#authForm
            .row
                div.col.col-sm-4.offset-sm-4
                    div.form-group
                        label(for="person_email") login
                        input.form-control#person_email(type="email" 
                                                        aria-describedby="emailHelp" 
                                                        placeholder="enter your email" 
                                                        name="person_email")
                        small#emailHelp.form-text.text-muted we'll never share your email with anyone else
                    div.form-group
                        label(for="person_password") password
                        input.form-control#person_password(type="password" 
                                                        aria-describedby="passwordHelp" 
                                                        placeholder="enter your password" 
                                                        name="person_password")
            .row
                .col.offset-sm-4.col-sm-2
                    button.btn.btn-primary(type="button" onclick="getToken();") submit
                .col.col-sm-2
                    p.text-right
                        a(href="#" onclick="resetPassword();" title="reset password")
                            span.mdi.mdi-36px.mdi-lock-reset 

    a(href="https://github.com/tbellembois/gochimitheque")
        img(style="position: absolute; top: 0; right: 0; border: 0;" src="{{.ProxyPath}}img/forkme_right_darkblue_121621.png" alt="Fork me on GitHub")

    .row.mt-sm-5
        .col.col-sm-4.offset-sm-4.animated.bounceInLeft
            img.mx-auto.d-block(src="{{.ProxyPath}}img/logo_ens.png", alt="ens_logo" title="Ecole Normale Supérieure de Lyon")
    .row.mt-sm-5
        .col.col-sm-4.offset-sm-4.animated.bounceInRight
            img.mx-auto.d-block(src="{{.ProxyPath}}img/logo_uca.jpg", alt="uca_logo" title="Université Clermont Auvergne")
    .row.mt-sm-5
        .col.col-sm-4.offset-sm-4.animated.jackInTheBox.delay-1s
            img.mx-auto.d-block(src="{{.ProxyPath}}img/logo_go.png", alt="go_logo" title="Developped with fun in Golang")

