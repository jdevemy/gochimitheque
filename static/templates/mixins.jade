mixin title(label)
    .card.bg-dark.text-center.w-25.mx-auto.mt-md-5.mb-md-5
        .card-body
            h5.card-title.text-light
                = T(label, 1)

mixin titleicon(iconitem, label)
    .row.mt-sm-2.mb-sm-2
        .col.d-flex.justify-content-center
            span(class='iconlabel mdi-'+ iconitem +' mdi mdi-36px')&nbsp;
                = T(label, 1)

mixin checkbox(label,name)
    .form-check
        input.form-check-input(type='checkbox' id=name)
        label.form-check-label(for=name)
            = T(label, 1)

mixin checkboxicon(title,name,icon)
    .form-check
        input.form-check-input(type='checkbox' id=name title=T(title, 1))
        label.form-check-label(for=name)
            span(class='mdi mdi-36px ' + icon title=T(title, 1))

mixin select(label,name)
    label(for=name)
        = T(label, 1)
    select.form-control(style='width: 100% !important;' id=name name=name)

mixin selectrequired(label,name)
    span.badge.badge-pill.badge-danger.collapse.show(id=name)  &nbsp;
    label(for=name)
        = T(label, 1)
    select.form-control(style='width: 100% !important;' id=name name=name)

mixin selecticon(name,icon)
    .form-group.row
        label.col-sm-4.col-form-label-sm(for=name)
            span(class="mdi-" + icon + " mdi mdi-36px")
        .col-sm-8
            select(style='width: 100% !important;' id=name name=name)

mixin selectcompact(label,name)
    .form-group.row
        label.col-sm-3.col-form-label-sm(for=name)
            = T(label, 1)
        .col-sm-9
            select.form-control(style='width: 100% !important;' id=name name=name)

mixin selectnolabel(placeholder,name)
    .form-group.row
        .col
            select.form-control(style='width: 100% !important;' id=name name=name placeholder=placeholder)


mixin selectmultiplecompact(label,name)
