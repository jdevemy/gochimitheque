| {{define "BASE"}}
| {{template "MIXINS"}}
html
    head
        | {{template "HEAD"}}
    body
        div.container
            | {{template "HEADER"}}

            nav.navbar.navbar-expand-lg.navbar-light.bg-light
                button.navbar-toggler(
                                    type="button"
                                    data-toggle="collapse" 
                                    data-target="#navbarSupportedContent" 
                                    aria-controls="navbarSupportedContent" 
                                    aria-expanded="false" 
                                    aria-label="Toggle navigation")
                    span.navbar-toggler-icon

                div.collapse.navbar-collapse#navbarSupportedContent
                    ul.navbar-nav.mr-auto
                        if HasPermission .PersonID "r" "products" -2
                            li.nav-item.active
                                a(href="/v/products" title="home").nav-link
                                    i.material-icons home
                        //li.nav-item
                        //    a(href="/login").nav-link login

                        if HasPermission .PersonID "w" "products" -2
                            li.nav-item
                                a(href="/vc/products" title="create product card").nav-link
                                    i.material-icons local_offer
                        if HasPermission .PersonID "r" "entities" -2
                            li.nav-item.dropdown
                                a(href="#", title="manage entities").nav-link.dropdown-toggle#navbarDropdown(
                                    role="button" 
                                    data-toggle="dropdown" 
                                    aria-haspopup="true" 
                                    aria-expanded="false")
                                    i.material-icons store
                                div.dropdown-menu(aria-labelledby="navbarDropdown")
                                    a(href="/v/entities", title="list").dropdown-item list
                                    if HasPermission .PersonID "all" "all" -1
                                        a(href="/vc/entities", title="create").dropdown-item create

                        if HasPermission .PersonID "r" "storelocations" -2
                            li.nav-item.dropdown
                                a(href="#", title="manage storelocations").nav-link.dropdown-toggle#navbarDropdown(
                                    role="button" 
                                    data-toggle="dropdown" 
                                    aria-haspopup="true" 
                                    aria-expanded="false")
                                    i.material-icons extension
                                div.dropdown-menu(aria-labelledby="navbarDropdown")
                                    a(href="/v/storelocations", title="list").dropdown-item list
                                    if HasPermission .PersonID "all" "all" -2
                                        a(href="/vc/storelocations", title="create").dropdown-item create

                        if HasPermission .PersonID "r" "people" -2
                            li.nav-item.dropdown
                                a(href="#", title="manage people").nav-link.dropdown-toggle#navbarDropdown(
                                    role="button" 
                                    data-toggle="dropdown" 
                                    aria-haspopup="true" 
                                    aria-expanded="false")
                                    i.material-icons supervisor_account
                                div.dropdown-menu(aria-labelledby="navbarDropdown")
                                    a(href="/v/people", title="list").dropdown-item list
                                    if HasPermission .PersonID "w" "people" -2
                                        a(href="/vc/people", title="create").dropdown-item create

                        li.nav-item
                            a.nav-link.disabled(href="#")
                                span#logged

            | {{template "CONTENT"}}
            | {{template "FOOTER"}}

        | {{template "FOOT"}}
        
        script.
            //
            // common javascript
            //

            // query parameters saved - used for the storages<>products views switch
            var lastQueryParams;

            // logged user email and permissions
            var container = {{ . }};

            // url parameters
            var URLValues = new Map();

            // initializing query parameters map
            {{ range $key, $value := .URLValues }}
                URLValues.set({{ $key }}, {{ $value }});
            {{ end }}

            // setting up logged user
            window.onload = function() {
                email = readCookie("email")
                document.getElementById("logged").innerHTML = email;
           };
        
        | {{template "CONTENTJS"}}
| {{end}}