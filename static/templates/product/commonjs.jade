        function saveProduct() {
            var form = $("#product");
            if (! form.valid()) {
                return;
            };

            var product_id = $("#edit-collapse input#product_id").val(),
                product_specificity = $("#edit-collapse input#product_specificity").val(),
                casnumber = $('select#casnumber').select2('data')[0],
