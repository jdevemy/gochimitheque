extends ../base.jade
block CONTENT
    :go:func
        Entitycreate(c ViewContainer)

    +titleicon("store", "creation", "create entity")

    form#entity
        .form-group.row
            +inputtext("name", "entity_name")
        .form-group.row
            +inputtext("description", "entity_description")
        .form-group.row
            +selectmultiple("manager(s)", "managers")

    button#save.btn.btn-link(type='button', onclick='saveEntity()')
        span.mdi.mdi-content-save.mdi-24px.iconlabel
            = T("save", 1)

block CONTENTJS
    script(src="../js/chim/entity.js")
