extends static/templates/base.jade

block content
    form#person-create
        .form-group.row
            label.col-sm-2.col-form-label(for='email') email
            .col-sm-10
                input#person_email.form-control(type='text', value='', name='email')
        .form-group.row
            label.col-sm-2.col-form-label(for='person_entity') entities
            .col-sm-10
                select.form-control(style='width: 100% !important;', id='person_entity', name='entity', multiple='multiple')
        .form-group.row#permissions
        button.btn.btn-primary(type='button', onclick='savePerson()') save changes

block contentjs
    script.

        $( document ).ready(function() {
            //
            // manager select2
            //
            $('select[id="person_entity"]').select2({
                ajax: {
                    url: '/entities',
                    dataType: 'json',
                    processResults: function (data) {
                        // replacing email by text expected by select2
                        var newdata = $.map(data.rows, function (obj) {
                            obj.text = obj.text || obj.entity_name;
                            obj.id = obj.id || obj.entity_id;
                            return obj;
                        });
                        return {
                            results: newdata
                        };
                    }
                }
            });
            $('select[id="person_entity"]').on('select2:unselecting', function (e) {
                var data = e.params.args.data;
                // removing permissions widget
                $("#perm" + data.id).remove();
            });
            $('select[id="person_entity"]').on('select2:select', function (e) {
                var data = e.params.data;
                
                // adding permissions widget
                $("#permissions").append(global.buildPermissionWidget(data.entity_id, data.entity_name));
            });
        });

        // form validation
        $( "#person-create" ).validate({
        errorClass: "alert alert-danger",
        rules: {
            email: {
                required: true,
                remote: {
                    url: "",
                    beforeSend: function(jqXhr, settings) {
                        settings.url = "/validate/person/-1/email/" + $("input#email").val();
                    },
                },
            },
            entity: {
                required: true,
            },
        },
        });

        // call ajax on submit
        function savePerson(form) {
            var form = $("#person-create");
            if (!form.valid()) {
                return;
            };

            var email = $("input#person_email").val(),
                selectedentities = $('select[id="person_entity"]').select2('data');
                selectedpermissions = $("input[type=radio]:checked");
                data = {};
                $.each(selectedpermissions, function( index, e ) {
                    data["permissions." + index +".permission_perm_name"] = $(e).attr("perm_name");
                    data["permissions." + index +".permission_item_name"] = $(e).attr("item_name");
                    data["permissions." + index +".permission_entity_id"] = $(e).attr("entity_id");
                });               
                $.each(selectedentities, function( index, e ) {
                    data["entities." + index +".entity_id"] = e.id;
                    data["entities." + index +".entity_name"] = e.text;
                });
                $.extend(data, {
                        "person_email": email,
                });
            $.ajax({
                url: "/people",
                method: "POST",
                dataType: 'json',
                data: data,
            }).done(function(data, textStatus, jqXHR) {
                displayMessage("person " + email + " created", "success");
                setTimeout(function(){ window.location = "/v/people"; }, 1000);
            }).fail(function(jqXHR, textStatus, errorThrown) {  
                handleHTTPError(jqXHR.statusText, jqXHR.status)
            }); 
        }