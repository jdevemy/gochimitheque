| {{define "CONTENT"}}

    +titleicon(icon="docker" label="create store location")

    form#storelocation
        .form-group.row
            .form-group.col-sm-12
                | {{$label := "name"}} {{$name := "storelocation_name"}}
                +inputtext
        .form-group.row
            .form-group.col-sm-12
                | {{$label := "entity"}} {{$name := "entity"}}
                +select
        .form-group.row
            .form-group.col-sm-12
                | {{$label := "parent"}} {{$name := "storelocation"}}
                +select 
        .form-group.row
            .form-group.col-sm-12
                | {{$label := "can store?"}} {{$name := "storelocation_canstore"}}
                +checkbox
        .form-group.row
            .form-group.col-sm-12
                | {{$label := "color"}} {{$name := "storelocation_color"}}
                +inputtext

    button#save.btn.btn-link(type='button', onclick='saveStoreLocation()')
        span.mdi.mdi-content-save.mdi-24px.iconlabel
            | {{ T "save" 1 }}
| {{end}}
