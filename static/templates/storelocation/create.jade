extends ../base.jade
block CONTENT
    :go:func
        Storelocationcreate(c ViewContainer)

    +titleicon(iconaction="creation" iconitem="docker" label="create store location")

    form#storelocation
        .form-group.row
            .form-group.col-sm-12
                +inputtext("name", "storelocation_name")
        .form-group.row
            .form-group.col-sm-12
                +select("entity", "entity")
        .form-group.row
            .form-group.col-sm-12
                +select("parent", "storelocation") 
        .form-group.row
            .form-group.col-sm-12
                +checkbox("can store?", "storelocation_canstore")
        .form-group.row
            .form-group.col-sm-12
                +inputtext("color", "storelocation_color")

    button#save.btn.btn-link(type='button', onclick='saveStoreLocation()')
        span.mdi.mdi-content-save.mdi-24px.iconlabel
            = T("save", 1)

block CONTENTJS
	script(src="../js/chim/storelocation.js")
